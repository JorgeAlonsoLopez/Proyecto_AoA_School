<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8"
    tools:context=".ui.detalle.admin.registroAeronave.RegistroAeronaveActivity">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="540dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/text_adjuntar_foto"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/img_form_aeronave"
                android:layout_width="308dp"
                android:layout_height="162dp"
                android:layout_marginStart="20dp"
                app:srcCompat="@drawable/ic_menu_gallery" />

            <EditText
                android:id="@+id/inpt_new_aeron_marca"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_marca"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_modelo"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_modelo"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_matricula"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_matricula_sin"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_motor"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_motor"
                android:inputType="textPersonName"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_potenc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_potencia"
                android:inputType="numberDecimal"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_autonom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_autonomia_sin"
                android:inputType="number"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_velMax_sin"
                android:inputType="number"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_velMin_sin"
                android:inputType="number"
                android:paddingBottom="20dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/inpt_new_aeron_cruc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/text_VelCruc_sin"
                android:inputType="number"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_registro_aseronave_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="32dp"
        android:text="@string/text_confirm"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_registro_aseronave_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/text_cancelar"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_registro_aseronave_ok"
        app:layout_constraintStart_toEndOf="@+id/btn_registro_aseronave_ok"
        app:layout_constraintTop_toTopOf="@+id/btn_registro_aseronave_ok"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>