<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9C9C9C"
    android:orientation="horizontal"
    android:paddingStart="25dp"
    android:paddingTop="10dp"
    android:paddingRight="25dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="360dp"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/text_comprador_factura_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Comprador"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/text_nombre_factura_value"
                app:layout_constraintTop_toBottomOf="@+id/text_nombre_factura_value" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="192dp"
                android:text="@string/text_importe"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_tipo_factura_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_tipo_factura_value" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/text_euro"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/text_precio_factura_value"
                app:layout_constraintStart_toEndOf="@+id/text_precio_factura_value"
                app:layout_constraintTop_toTopOf="@+id/text_precio_factura_value" />

            <TextView
                android:id="@+id/text_nombre_factura_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:text="Nombre"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_compra_factura_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Fecha"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/text_tipo_factura_value"
                app:layout_constraintStart_toStartOf="@+id/text_comprador_factura_value" />

            <TextView
                android:id="@+id/text_tipo_factura_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Tipo"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/date_compra_factura_value" />

            <TextView
                android:id="@+id/text_precio_factura_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="0"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>